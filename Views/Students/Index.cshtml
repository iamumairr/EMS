@model IEnumerable<EMS.Models.Student>

@{
    ViewData["Title"] = "Index";
}
<div class="row">
    <div class="col-md-12">
        <h1 class="text-center text-info">
            All Students
        </h1>
    </div>
</div>
<div class="row mb-2">
    <div class="col-md-12">
        <a asp-action="Create" class="btn btn-success btn-sm float-end">Create New</a>
    </div>
</div>
@if (Model != null)
{
    if (Model.Count() > 0)
    {
        <table class="table table-bordered table-hover">
            <thead class="text-center">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.StudentName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DOB)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StudentEmail)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProfilePicture)
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudentName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DOB)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StudentEmail)
                        </td>
                        <td>
                            <img src="~/uploads/@item.ProfilePicture" width="200" height="100" class="border"/>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-warning">
            No records found. Please add a one.
        </div>
    }
}


